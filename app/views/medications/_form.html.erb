<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<% if flash[:error] %>
  <p id="error"><%= flash[:error] %></p>
<% end %>

<%= form_for [@hospital, @patient] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :dose %>
	<%= f.text_field :dose %>
	<br>
	<%= f.submit %>
<% end %>